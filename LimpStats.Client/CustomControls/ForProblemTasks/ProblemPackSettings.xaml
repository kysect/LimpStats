<UserControl x:Class="LimpStats.Client.CustomControls.ForProblemTasks.ProblemPackSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="210"
             mc:Ignorable="d">
    <StackPanel Height="280" Width="200">
        <StackPanel
            Height="40"
            Orientation="Horizontal">
            <Button
                x:Name="CardTitle"
                Width="160"
                VerticalAlignment="Stretch"
                Background="#333333"
                Click="CardTitle_OnClick"
                DataContext="GroupTitle"
                Style="{DynamicResource CardTitle}" />
            <Button
                Width="40"
                HorizontalAlignment="Left"
                Click="ButtonClick_DelPack"
                Style="{DynamicResource Close}" />
        </StackPanel>
        <StackPanel
            x:Name="Panel"
            Background="#333333"
            Height="205"
            Width="200" />
        <Button
            Content="Add Problems"
            Click="AddProblemsClick"/>
    </StackPanel>
</UserControl>
