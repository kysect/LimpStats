<Window
    x:Class="LimpStats.Client.CustomControls.InitializationCardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LimpStats.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="InitializationCardWindow"
    Width="200"
    Height="150"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            Name="LoginTextBox"
            Height="20"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            GotFocus="TextBox1_OnGotFocus"
            MaxLength="250"
            Text="Введите логин"
            TextChanged="TextBox_TextChanged"
            TextWrapping="Wrap" />
        <Button
            Name="AddUserButton"
            Width="30"
            Height="25"
            Margin="0,50,0,0"
            Click="ValidateLogin"
            Content="Add" />
    </Grid>
</Window>
