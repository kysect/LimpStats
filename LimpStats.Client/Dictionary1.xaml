                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border
                            x:Name="Border"                      
                            Background="#333333"/>
                        <Label
                            HorizontalAlignment="Center"
                            Content="✘"
                            Foreground="#E8F9F2"
                            FontSize="20" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsDefaulted" Value="true"/>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter
                                Property="Background"
                                TargetName="Border"
                                Value="#4C4C4C" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true"/>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter
                                Property="Background"
                                TargetName="Border"
                                Value="#4C4C4C" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

