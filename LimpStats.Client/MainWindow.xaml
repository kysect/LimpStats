<Window
    x:Class="LimpStats.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LimpStats.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:LimpStats.Model;assembly=LimpStats.Model"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid Background="#202020">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ScrollViewer
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="250"
            HorizontalAlignment="Left"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Visible" />

        <StackPanel Grid.Column="1" VerticalAlignment="Stretch">
            <StackPanel
                Height="40"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Width="70"
                    Height="30"
                    Click="Button1_Click"
                    Content="Open window"
                    IsEnabled="False"
                    RenderTransformOrigin="0.5,0.5" />
                <Button
                    Width="75"
                    Height="30"
                    Click="LoadFromFile_ButtonClick"
                    Content="Button" />

                <Button
                    Name="AddList"
                    Width="70"
                    Height="30"
                    Click="OnClick_UpdatePanel"
                    Content="Add list"
                    IsEnabled="False"
                    
                    RenderTransformOrigin="0.5,0.5" Margin="0,5" />               
                <TextBox
                    Name="FilePath"
                    Width="150"
                    Height="30"
                    VerticalContentAlignment="Center"
                    Text="NameCard"
                    GotFocus="TextBox1_OnGotFocus"
                    TextChanged="FilePath_OnTextChanged"
                    KeyDown="FilePath_OnKeyDown"
                    TextWrapping="Wrap" />
            </StackPanel>
            <ScrollViewer
                Name="PanelViewer"
                MaxWidth="600"
                HorizontalScrollBarVisibility="Visible"
                VerticalScrollBarVisibility="Disabled">
                <StackPanel
                    x:Name="Panel"
                    MinWidth="300"
                    MinHeight="400"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal" />

            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
